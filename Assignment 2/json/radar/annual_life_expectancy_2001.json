{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A radar chart example, showing multiple dimensions in a radial layout.",
    "width": 500,
    "height": 430,
    "padding": 100,
    "title": "Afflictions each year",
    
    "config": {
        "title": {
            "color": "black",
            "fontSize": 20,
            "align": "right"
        }
    },
    "autosize": { "type": "none", "contains": "padding" },
    "background": "#F6E4D1",
    "signals": [
        { "name": "radius", "update": "width / 2" }
    ],

    "data": [{
            "name": "table",
            "values": [
                { "key": "Measels (hundred)", "value": 46.40262295, "category": 2001 },
                { "key": "BMI", "value": 36.1359116, "category": 2001 },
                { "key": "Polio", "value": 77.95, "category": 2001 },
                { "key": "HIV", "value": 2.573770492, "category": 2001 }
            ]  
        },
        {
            "name": "keys",
            "source": "table",
            "transform": [{
                "type": "aggregate",
                "groupby": ["key"]
            }]
            
        }
    ],
    "params": [
        {
            "name": "Year_selection",
            "value": 2015,
            "bind" : {"input": "range", "min": 2000, "max": 2015, "step": 1, "name": "Year Selection: "}
        }
    ],

    "scales": [{
            "name": "angular",
            "type": "point",
            "range": { "signal": "[-PI+0.8, PI+0.8]" },
            "padding": 0.5,
            "domain": { "data": "table", "field": "key" }
        },
        {
            "name": "radial",
            "type": "linear",
            "range": { "signal": "[0, radius]" },
            "zero": true,
            "nice": false,
            "domain": { "data": "table", "field": "value" },
            "domainMin": 0
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": { "data": "table", "field": "category" },
            "range": { "scheme": "category10" }
        }
    ],
    "encode": {
        "enter": {
            "x": { "signal": "radius" },
            "y": { "signal": "radius" }
        }
    },
    "legends": [{ "fill": "color", "title": "States" }],
    "marks": [{
            "type": "group",
            "name": "categories",
            "zindex": 1,
            "from": {
                "facet": { "data": "table", "name": "facet", "groupby": ["category"] }
            },
            "params": [
                {
                    "name": "country_status",
                    "select": {
                        "type": "line",
                        "fields": [
                            "category"
                        ]
                    },
                    "bind": "legend"
                }
            ],
            "marks": [{
                "type": "line",
                "name": "category-line",
                "from": { "data": "facet" },
                "encode": {
                    "enter": {
                        "interpolate": { "value": "linear-closed" },
                        "x": { "signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))" },
                        "y": { "signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))" },
                        "stroke": { "scale": "color", "field": "category" },
                        "strokeWidth": { "value": 1 },
                        "fill": { "scale": "color", "field": "category" },
                        "fillOpacity": { "value": 0.1 },
                        "tooltip": { "signal": "{'Category': datum.category,'Key': datum.key, 'Value': datum.value }" }
                    },
                    "update": { "fill": { "value": "#ccc" } },
                    "hover": {
                        "fill": { "value": "purple" }
                    },
                    "select": {
                        "fill": { "value": "0.1" }
                    }
                }
            },{
                "type": "text",
                "name": "value-text",
                "from": {"data": "category-line"},
                "encode": {
                    "enter": {
                    "x": {"signal": "datum.x"},
                    "y": {"signal": "datum.y"},
                    "text": {"signal": "format(datum.datum.value, '.2f')"},
                    "align": {"value": "center"},
                    "baseline": {"value": "middle"},
                    "fill": {"value": "black"}
                    }
                }
            }]
        },
        {
            "type": "rule",
            "name": "radial-grid",
            "from": { "data": "keys" },
            "zindex": 0,
            "params": [
        {
            "name": "country_status",
            "select": {
                "type": "point",
                "fields": [
                    "Status"
                ]
            },
            "bind": "legend"
        }
    ],
            "encode": {
                "enter": {
                    "x": { "value": 0 },
                    "y": { "value": 0 },
                    "x2": { "signal": "radius * cos(scale('angular', datum.key))" },
                    "y2": { "signal": "radius * sin(scale('angular', datum.key))" },
                    "stroke": { "value": "lightgray" },
                    "strokeWidth": { "value": 1 }
                },
                "opacity": {
                    "condition": {
                        "param": "country_status",
                        "value": 1
                    },
                    "value": 0.2
                }
            }
        },
        {
            "type": "text",
            "name": "key-label",
            "from": { "data": "keys" },
            "zindex": 1,
            "encode": {
                "enter": {
                    "x": { "signal": "(radius + 10) * cos(scale('angular', datum.key))" },
                    "y": { "signal": "(radius + 10) * sin(scale('angular', datum.key))" },
                    "text": { "field": "key" },
                    "align": [{
                            "test": "abs(scale('angular', datum.key)) > PI / 2",
                            "value": "right"
                        },
                        {
                            "value": "left"
                        }
                    ],
                    "baseline": [{
                            "test": "scale('angular', datum.key) > 0",
                            "value": "top"
                        },
                        {
                            "test": "scale('angular', datum.key) == 0",
                            "value": "middle"
                        },
                        {
                            "value": "bottom"
                        }
                    ],
                    "fill": { "value": "black" },
                    "fontWeight": { "value": "bold" }
                }
            }
        },
        {
            "type": "line",
            "name": "outer-line",
            "from": { "data": "radial-grid" },
            "encode": {
                "enter": {
                    "interpolate": { "value": "linear-closed" },
                    "x": { "field": "x2" },
                    "y": { "field": "y2" },
                    "stroke": { "value": "lightgray" },
                    "strokeWidth": { "value": 1 }
                }
            }
        }
    ]
}